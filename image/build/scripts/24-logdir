#!/usr/bin/env ruby
# coding: utf-8
# frozen_string_literal: true

Warning[:deprecated] = true
autoload(:Pathname, 'pathname')
autoload(:FileUtils, 'fileutils')
self.__send__(:include, FileUtils::Verbose)

Pathname.new('/var/log').tap do |logdir|
  logdir.join('lastlog').tap do |lastlog|
    touch(lastlog)
    chown('root', 'utmp', lastlog)
  end

  logdir.join('secure').tap do |seclog|
    Pathname.new('/etc/syslog.conf').tap do |config|
      if config.file? and config.readable? and /\s+#{seclog}\s*$/ =~ config.read
        touch(seclog)
        chmod(0o640, seclog)
      end
    end
  end
end
