#!/usr/bin/env ruby
# frozen_string_literal: true

# This script installs the following gems:
#
# * sv-utils
# * ylem
#
# located in ``BUILD_VENDOR_DIR`` directory.

require 'build'

{
  'ylem': '/sbin',
  'sv-utils': '/sbin'
}.tap do |packages|
  ENV.fetch('BUILD_VENDOR_DIR').tap do |dir|
    packages.sort
            .to_h
            .each { |k, v| Build::Gem.install("#{dir}/#{k}", v) }
  end
end
