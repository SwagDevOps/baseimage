#!/usr/bin/env ruby
# frozen_string_literal: true

require 'fileutils'
require 'yaml'
require 'pathname'

self.extend(FileUtils::Verbose)

Pathname.new(__dir__).join('../config/cleanup.yml').tap do |fp|
  YAML.safe_load(fp.read)
      .map { |g| Dir.glob(g) }
      .flatten
      .sort
      .each { |f| rm_rf(f) }
end
