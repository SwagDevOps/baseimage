#!/usr/bin/env ruby
# frozen_string_literal: true

# noinspection RubyResolve
$LOAD_PATH.unshift('/boot/lib/ruby').tap { require 'boot' }

# This script SHOULD be replaced by ylem "hooks" when availbale.

autoload(:Pathname, 'pathname')
autoload(:FileUtils, 'fileutils')
__send__(:include, FileUtils::Verbose)

at_exit { GC.start }

Dir['/boot/{.[^\.]*,*}'].sort.tap do |paths|
  Boot::ThreadPool.new do |pool|
    paths.map do |fp|
      pool.schedule do
        rm_rf(fp) unless Pathname.new(fp).mountpoint?
      end
    end
  end
end
