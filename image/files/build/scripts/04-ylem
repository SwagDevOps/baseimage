#!/usr/bin/env sh

run() {
    (
        set -eu

        cd ${BUILD_VENDOR_DIR}/ylem
        gem build *.gemspec
        gem install *.gem \
            --norc \
            -ENn /usr/local/bin --no-post-install-message \
            --no-user-install \
            --clear-sources \
            --no-wrappers \
            --conservative --minimal-deps
    )
}

run
