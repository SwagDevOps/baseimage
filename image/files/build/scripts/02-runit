#!/usr/bin/env sh

# @see https://rawgit.com/dockage/runit-scripts/master/scripts/installer
install_scripts() {
    tar -xzf runit-scripts.tar.gz

    cp -ar dockage-runit-scripts-*/scripts/usr/* /usr
}

run() {
    (
        set -eu
        cd ${BUILD_VENDOR_DIR}

        install_scripts
        mkdir -p "${SVDIR}"
    )
}

run
