#!/usr/bin/env sh

run() {
    set -eux

    apk add --no-cache \
        bash bash-completion busybox \
        curl sed tar shadow  \
        htop vim less coreutils sed \
        gcc gnupg procps musl-dev make \
        linux-headers zlib zlib-dev \
        ruby ruby-dev ruby-irb ruby-rdoc ruby-bundler \
        openssl openssl-dev libssl1.0 \
        cmake pkgconf
}

run
